{
  "title": "control <=> command in Terminal",
  "rules": [
    {
      "description": "Swap left control and command in Terminal",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [ "com\\.apple\\.Terminal", "org\\.vim\\.MacVim", "com\\.googlecode\\.iterm2" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [ "com\\.apple\\.Terminal", "org\\.vim\\.MacVim", "com\\.googlecode\\.iterm2" ]
            }
          ]
        }
      ]
    }
  ]
}
